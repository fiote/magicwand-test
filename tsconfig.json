{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "build",
		"target": "es2016",

		"jsx": "react",
		"lib": ["dom", "esnext"],
		"module": "esnext",
		"esModuleInterop": true,

		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}